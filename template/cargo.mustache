[package]
name = "ingest-{{{name}}}"
version = "{{{version}}}"
edition = "2021"

# https://github.com/rustwasm/wasm-pack/issues/1247
[package.metadata.wasm-pack.profile.release]
wasm-opt = false

[lib]
crate-type = ["cdylib"]

[dependencies]
worker = "0.0.18"
serde = { version = "1.0.163", features = ["derive"] }
apache-avro = { version = "0.15.0", features = ["snappy"] }
ingest-lib = { path = "../../lib" }

[dev-dependencies]
serde_json = "1.0.97"

[profile.release]
lto = true
strip = true
codegen-units = 1
